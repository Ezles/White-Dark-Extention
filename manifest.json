{
  "manifest_version": 3,
  "name": "My Extension Black & White",
  "version": "1.0",
  "description": "This extension turns the page black and white",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "fight.html",
    "default_icon": {
      "16": "img/icon.png",
      "48": "img/icon.png",
      "128": "img/icon.png"
    }
  },
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ]
}
